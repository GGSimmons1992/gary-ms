@model MVCWorld.Client.Models.Invitation

<h1>Party Invitation</h1>
<h2>@DateTime.UtcNow</h2>
<p>@Model.Name</p>
<p>@Model.Message</p>


@using (Html.BeginForm("post", "invite"))
{
    @Html.LabelFor(m => m.Menu, "Gluten-Free")
    @Html.RadioButtonFor(m => m.Menu, "yes")
    @Html.ValidationMessageFor(m => m.Menu)

    @Html.LabelFor(m => m.Guests)
    @Html.TextBoxFor(m => m.Guests)
    @Html.ValidationMessageFor(m => m.Guests)

    @Html.LabelFor(m => m.RSVP)
    @Html.CheckBoxFor(m => m.RSVP)
    @Html.ValidationMessageFor(m => m.RSVP)

    <button type="submit">Submit</button>
}

@section  Scripts
{
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}


